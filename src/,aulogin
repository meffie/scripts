#!/bin/sh

PYTHONPATH="$(pwd)/.venv/lib/python2.7/site-packages"
PYTHON="$(pwd)/.venv/bin/python2"
AFSUTIL="$(pwd)/.venv/bin/afsutil"
SUDO_AFSUTIL="/usr/bin/sudo -n PYTHONPATH=$PYTHONPATH $PYTHON $AFSUTIL"

$AFSUTIL ktlogin \
  --realm EXAMPLE.COM \
  --cell example.com \
  --user afsadmin \
  --akimpersonate \
  --keytab /tmp/afsutil/fake.keytab \
  -p aklog=/usr/local/bin/aklog-1.6
